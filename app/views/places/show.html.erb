<h1><%= @place.name %></h1>

<p>
  <a class="btn btn-success" href="/posts/new?place_id=<%= @place.id %>" role="button">New Post</a> 
</p>
<% if @current_user %>


<div class="row">
<% for post in @place.posts %>
<div class="col-md-3">
        <h4>
        <% if post.user %>
          <% post.user.username%>
        <% else %>
          User not found
        <% end %>
        </h4>
  
  <p><%= post.title %></p>
  <p><%= post.posted_on %></p>

  <% if post.uploaded_image.attached? %>
  <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
  <% else %>
  <img src="<%= post.image %>" class="img-fluid">
  <% end %>

  <p><%= post.description %></p>

<% end %>
<% end %>

</div>
<p>
  <a href="/places">Back to All Places</a>
</p>
</div>